<% content_for(:title) { "Groups - Claude Explorer" } %>

<header class="page-header">
  <h1>Project Groups</h1>
  <p class="page-header__subtitle"><%= @page.recordset.records_count %> groups</p>

  <% if @show_empty %>
    <%= link_to "Hide empty groups", project_groups_path, class: "toggle-link toggle-link--active" %>
  <% else %>
    <%= link_to "Show empty groups", project_groups_path(show_empty: true), class: "toggle-link" %>
  <% end %>
</header>

<%= with_manual_pagination :project_groups, @page, class: "projects-grid" do %>
  <% @page.records.each do |project_group| %>
    <%= render "project_group", project_group: project_group %>
  <% end %>
<% end %>
