<article class="project-group-card">
  <%= link_to project_group, data: { turbo_frame: "_top" } do %>
    <div class="project-group-card__icon">
      <% if project_group.sourceable_type == "Repository" %>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="3" />
          <line x1="3" y1="12" x2="9" y2="12" />
          <line x1="15" y1="12" x2="21" y2="12" />
          <line x1="12" y1="3" x2="12" y2="9" />
          <line x1="12" y1="15" x2="12" y2="21" />
        </svg>
      <% else %>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z" />
        </svg>
      <% end %>
    </div>
    <h2 class="project-group-card__name"><%= project_group.display_name %></h2>

    <div class="project-group-card__stats">
      <span><%= project_group.projects.count %> projects</span>
    </div>
  <% end %>
</article>
